.blog-masthead
  .container
    nav.blog-nav
      if pageName === '/posts'
        a.blog-nav-item.active(href='/posts') 首页
      else
        a.blog-nav-item(href='/posts') 首页
      a.blog-nav-item(href='/admin/posts') 后台
      form.navbar-form.navbar-right(method='get', action='/posts/search', id="searchform")
        input.form-control(type='text', placeholder='Search...', name="searchfor", id="searchfor")
